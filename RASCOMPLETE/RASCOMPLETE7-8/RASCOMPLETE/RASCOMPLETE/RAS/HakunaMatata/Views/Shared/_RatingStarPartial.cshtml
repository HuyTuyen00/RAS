@{
    Layout = null;
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    .star-rating {
        line-height:32px;
        font-size:1.25em; 
    }
    
    .star-rating .check{color: #ffc107;}
    .star-rating .uncheck{color: #cccccc;}
</style>

<div class="container">
    <div class="row" style="margin-left: -27px;">
        <div class="col-lg-12">
            <div class="star-rating">
                <span class="fa fa-star check" data-rating="1" style="cursor: pointer;"></span>
                <span class="fa fa-star check" data-rating="2" style="cursor: pointer;"></span>
                <span class="fa fa-star check" data-rating="3" style="cursor: pointer;"></span>
                <span class="fa fa-star check" data-rating="4" style="cursor: pointer;"></span>
                <span class="fa fa-star check" data-rating="5" style="cursor: pointer;"></span>
                &emsp;<small id="AverageStarPoint">5/5</small>
                <input type="hidden" name="whatever1" id="current-rating-value" class="rating-value" value="0">
                <br><small style="display: none" id="err-rating" class="text-danger">Bạn chưa đăng nhập</small>
            </div>
        </div>
    </div>
</div>