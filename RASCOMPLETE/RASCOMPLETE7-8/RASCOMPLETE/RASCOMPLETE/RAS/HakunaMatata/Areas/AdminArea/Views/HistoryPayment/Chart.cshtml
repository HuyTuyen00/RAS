@{
    ViewData["Title"] = "Chart";
}

<link href="~/js/application/canvasjs/styles.css" rel="stylesheet" />
<script src="~/js/application/canvasjs/jquery-ui.1.11.2.min.js"></script>
<script src="~/js/application/canvasjs/jquery.canvasjs.min.js"></script>

<div id="view-all">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-title">
                        <h5>Biểu đồ doanh thu</h5>
                    </div>

                    <form>
                        <div class="form-group">
                            <label for="Year">Month:</label>
                            <select class="form-control" id="Month"></select>
                        </div>
                        <div class="form-group">
                            <label for="Year">Year:</label>
                            <select class="form-control" id="Year"></select>
                        </div>

                        <div class="form-group" style="text-align: center;">
                            <button type="button" id="btn-generate-report-by-month" class="btn btn-primary">Generate Report</button>
                        </div>

                    </form>

                    <div id="resizable-report-by-month">
                        <div id="report-by-month" style="height: 100%; width: 100%;"></div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/application/web/chart.js" asp-append-version="true"></script>