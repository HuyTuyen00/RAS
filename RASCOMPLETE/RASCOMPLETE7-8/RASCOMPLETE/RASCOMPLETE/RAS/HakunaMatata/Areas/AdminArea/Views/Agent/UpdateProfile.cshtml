@model HakunaMatata.Models.ViewModels.VM_Agent

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Thông tin cá nhân</h5>
                </div>
                <div class="ibox-content">
                    <form asp-action="UpdateProfile" method="post" onsubmit="return UpdateUserInfo(this)">
                        <div class="form-group row">
                            <label asp-for="Avatar">PictureName</label>
                            <input type="text" asp-for="Avatar" class="form-control" id="Avatar" />
                            <span asp-validation-for="Avatar" class="text-danger"></span>

                            <label for="imageInput2">Avatar</label>
                            <input type="file" id="imageInput2" class="form-control" accept="image/*" />
                            <span asp-validation-for="Avatar" class="text-danger"></span>

                            <label style="display:none" id="pictureName"></label>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Mã thành viên</label>

                            <div class="col-lg-9">
                                <input type="text" readonly class="form-control" asp-for="Id">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Tên liên hệ</label>
                            <div class="col-lg-9"><input type="text" class="form-control" asp-for="Name" required></div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Số điện thoại</label>
                            <div class="col-lg-9"><input type="text" class="form-control" asp-for="ContactNumber" required></div>
                            <span asp-validation-for="ContactNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Link Facebook</label>
                            <div class="col-lg-9"><input type="text" class="form-control" asp-for="Facebook"></div>
                            <span asp-validation-for="Facebook" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Link Zalo</label>
                            <div class="col-lg-9"><input type="text" class="form-control" asp-for="Zalo"></div>
                            <span asp-validation-for="Zalo" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Email</label>
                            <div class="col-lg-9"><input type="text" class="form-control" asp-for="Email"></div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Mật khẩu</label>
                            <div class="col-lg-9 mt-2">
                                <a asp-action="UpdatePassword" asp-controller="Agent">Đổi mật khẩu</a>
                                @if (ViewBag.UpdatePassStatus != null)
                                {
                                    <div class="text-navy">@ViewBag.UpdatePassStatus</div>
                                }
                            </div>

                        </div>
                        <div class="form-group row">
                            <div class="col-3"></div>
                            <div class="col-6">
                                <button class="btn btn-brown text-center" type="submit">Cập nhật thông tin</button>
                            </div>
                            <div class="col-3"></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-3"></div>
    </div>
</div>
<script>
    document.getElementById("imageInput2").addEventListener("change", function (event) {
        var file = event.target.files[0]; // Lấy tệp tin được chọn

        var inputAvatar = document.getElementById("Avatar"); // Trường input Avatar
        var labelPictureName = document.getElementById("pictureName"); // Label PictureName

        // Gán tên tệp tin vào trường input Avatar
        inputAvatar.value = file.name;

        // Hiển thị tên tệp tin trong label PictureName
        labelPictureName.textContent = file.name;
    });


</script>